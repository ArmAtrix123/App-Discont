@model Kursach.Models.Modeli
@{
    ViewBag.Title = "Добавление поста";
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Ubuntu:wght@400;700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@900&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@600&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Titillium+Web&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/StyleRegist.css" />
<header class="header" id="start">
    <div class="container">
        <div class="wrapper">
            <div class="logo">
                <img src="/img/Logo.png" alt="Logo">
            </div>
            <nav class="navigation">
                <a asp-action="Post" asp-controller="home" class="li">Назад</a>
                <a asp-action="Glavnaya" class="li">Выйти</a>
            </nav>
        </div>
        <div class="button-navigation">
            <button class="scroll-bar">
                <a href="#start"><img src="/img/scroll-up.svg" alt="scroll-bar"></a>
            </button>
        </div>
    </div>
</header>
<section class="contact conta" id="contact-id">
    <div class="contant-wrapper">
        <div class="Cont">
            <div class="title-contact">
                <h2>Создание поста</h2>
            </div>
        </div>
    </div>
    <div class="review-wrapper">
        <div class="form">
            <form asp-action="NewPosti" asp-controller="Home" class="review">
                <input type="text" placeholder="Название модели" asp-for="Model" class="input" />
                <input type="text" placeholder="Скидка" asp-for="skidki" class="input" />
                <input type="text" placeholder="Ссылка на фото" asp-for="picture" class="input" />
                <input type="text" placeholder="Описание модели" asp-for="info" class="input" />
                <div class="button">
                    <button class="button btnform">Создать пост</button>
                </div>
            </form>
        </div>
    </div>
</section>
