@model Kursach.Models.User
@{
    ViewBag.Title = "Добавление пользователя";
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Ubuntu:wght@400;700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@900&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/StyleSheet.css" />
<section class="form">
    <div class="contanier">
        <h2 class="title">Добавление Пользователя</h2>
        <form asp-action="create" asp-controller="home" class="email">
            <input type="text" placeholder="Имя" asp-for="Ima" class="input" />
            <input type="text" placeholder="Фамилия" asp-for="Familia" class="input" />
            <input type="text" placeholder="Отчество" asp-for="Otchestvo" class="input" />
            <input type="date" placeholder="Дата рождения" asp-for="DataR" class="input" />
            <input type="email" placeholder="Почта" asp-for="Email" class="input" />
            <input type="text" placeholder="Логин" asp-for="Login" class="input" />
            <input type="password" placeholder="Пароль" asp-for="Password" class="input" />
            <input type="submit" value="Добавить" class="button btnformi" />
            <input type="submit" value="Вернуться" class="button btnformi" asp-action="Index" asp-controller="home" />
        </form>
    </div>
    <footer class="footer">
        <img src="/img/logofooter1.png" alt="Логотип" class="logofooter">
        <p class="end">
            © Все права защищены правообладателем
        </p>
    </footer>
</section>